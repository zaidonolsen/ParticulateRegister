import React, { useEffect, useState } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import { fetchParticulateTypes, fetchDetectionStatuses } from '../api/enums';
import { useParticulateContext } from '../context/ParticulateContext';

const ParticulateDetail: React.FC = () => {
    const { id } = useParams<{ id: string }>();
    const { particulates, refresh } = useParticulateContext();
    const [types, setTypes] = useState<string[]>([]);
    const [statuses, setStatuses] = useState<string[]>([]);
    const navigate = useNavigate();

    useEffect(() => {
        fetchParticulateTypes().then(setTypes);
        fetchDetectionStatuses().then(setStatuses);
        refresh(); // Ensure latest data after navigation
    }, [refresh]);

    const particulate = particulates.find(p => p.id === id);

    if (!particulate) return <div className="container mt-4">Not found</div>;

    const getTypeName = (type: any) => {
        if (typeof type === 'number' && types.length > type) return types[type];
        if (typeof type === 'string') {
            const idx = Number(type);
            if (!isNaN(idx) && types.length > idx) return types[idx];
            return type;
        }
        return type;
    };
    const getStatusName = (status: any) => {
        if (typeof status === 'number' && statuses.length > status) return statuses[status];
        if (typeof status === 'string') {
            const idx = Number(status);
            if (!isNaN(idx) && statuses.length > idx) return statuses[idx];
            return status;
        }
        return status;
    };

    return (
        <div className="container mt-4">
            <h2>Particulate Detail</h2>
            <div className="mb-3">
                <strong>Name:</strong> {particulate.name}<br />
                <strong>Alias:</strong> {particulate.alias}<br />
                <strong>Type:</strong> {getTypeName(particulate.type)}<br />
                <strong>Status:</strong> {getStatusName(particulate.detectionStatus)}<br />
                <strong>Notes:</strong> {particulate.detectionNotes}<br />
            </div>
            <div className="mb-3">
                <h4>History</h4>
                <table className="table table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {particulate.history?.map(h => (
                            <tr key={h.id}>
                                <td>{new Date(h.date).toLocaleString()}</td>
                                <td>{getTypeName(h.type)}</td>
                                <td>{getStatusName(h.status)}</td>
                                <td>{h.notes}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
            <button className="btn btn-warning btn-sm me-2" onClick={() => navigate(`/edit/${particulate.id}`)}>Edit</button>
            <button className="btn btn-secondary btn-sm ms-2" onClick={() => navigate('/')}>Back to List</button>
        </div>
    );
};

export default ParticulateDetail;
