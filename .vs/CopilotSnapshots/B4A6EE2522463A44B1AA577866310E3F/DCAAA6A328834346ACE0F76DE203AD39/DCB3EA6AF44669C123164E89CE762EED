import React, { useEffect, useState } from 'react';
import { useNavigate, useParams } from 'react-router-dom';
import { createParticulate, updateParticulate, fetchParticulate } from '../api/particulates';
import { fetchParticulateTypes, fetchDetectionStatuses } from '../api/enums';
import { useParticulateContext } from '../context/ParticulateContext';
import type { Particulate } from '../types/particulate';

const defaultParticulate: Partial<Particulate> = {
    name: '',
    alias: '',
    type: '',
    detectionStatus: '',
    detectionNotes: '',
    cropAssociations: [],
    regionAssociations: [],
    seasonalAssociations: [],
};

const ParticulateForm: React.FC = () => {
    const { id } = useParams<{ id?: string }>();
    const navigate = useNavigate();
    const { refresh } = useParticulateContext();
    const [form, setForm] = useState<Partial<Particulate>>(defaultParticulate);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState<string | null>(null);
    const [types, setTypes] = useState<string[]>([]);
    const [statuses, setStatuses] = useState<string[]>([]);
    // Local string states for comma-separated input
    const [cropInput, setCropInput] = useState('');
    const [regionInput, setRegionInput] = useState('');
    const [seasonalInput, setSeasonalInput] = useState('');

    useEffect(() => {
        fetchParticulateTypes()
            .then(data => {
                setTypes(data);
            })
            .catch(err => console.error("Error fetching types:", err));

        fetchDetectionStatuses()
            .then(data => {
                setStatuses(data);
            })
            .catch(err => console.error("Error fetching statuses:", err));
    }, []);

    useEffect(() => {
        if (id && types.length > 0 && statuses.length > 0) {
            setLoading(true);
            fetchParticulate(id)
                .then(data => {
                    setForm({
                        ...data,
                        type: typeof data.type === 'number' ? types[data.type] : data.type,
                        detectionStatus: typeof data.detectionStatus === 'number' ? statuses[data.detectionStatus] : data.detectionStatus,
                    });
                    setCropInput((data.cropAssociations || []).join(", "));
                    setRegionInput((data.regionAssociations || []).join(", "));
                    setSeasonalInput((data.seasonalAssociations || []).join(", "));
                })
                .catch(e => setError(e.message))
                .finally(() => setLoading(false));
        }
    }, [id, types, statuses]);

    const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement>) => {
        setForm(f => ({ ...f, [e.target.name]: e.target.value }));
    };

    const handleCropChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        setCropInput(e.target.value);
    };
    const handleRegionChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        setRegionInput(e.target.value);
    };
    const handleSeasonalChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        setSeasonalInput(e.target.value);
    };

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        setLoading(true);
        // Convert comma-separated strings to arrays
        const cropAssociations = cropInput.split(',').map(s => s.trim()).filter(Boolean);
        const regionAssociations = regionInput.split(',').map(s => s.trim()).filter(Boolean);
        const seasonalAssociations = seasonalInput.split(',').map(s => s.trim()).filter(Boolean);
        // Map type and detectionStatus to their enum index
        const typeIndex = types.indexOf(form.type || "");
        const statusIndex = statuses.indexOf(form.detectionStatus || "");
        const payload = {
            ...form,
            type: typeIndex,
            detectionStatus: statusIndex,
            cropAssociations,
            regionAssociations,
            seasonalAssociations,
        };
        try {
            if (id) {
                await updateParticulate(id, payload);
            } else {
                await createParticulate(payload);
            }
            await refresh();
            navigate('/');
        } catch (e: any) {
            setError(e.message);
        } finally {
            setLoading(false);
        }
    };

    return (
        <div className="container mt-4">
            <h2>{id ? 'Edit' : 'Register'} Particulate</h2>
            {error && <div className="alert alert-danger">{error}</div>}
            <form onSubmit={handleSubmit}>
                <div className="mb-3">
                    <label className="form-label">Name</label>
                    <input name="name" className="form-control" value={form.name || ''} onChange={handleChange} required />
                </div>
                <div className="mb-3">
                    <label className="form-label">Alias</label>
                    <input name="alias" className="form-control" value={form.alias || ''} onChange={handleChange} />
                </div>
                <div className="mb-3">
                    <label className="form-label">Type</label>
                    <select name="type" className="form-select" value={form.type || ''} onChange={handleChange} required>
                        <option value="">Select Type</option>
                        {types.map(t => <option key={t} value={t}>{t}</option>)}
                    </select>
                </div>
                <div className="mb-3">
                    <label className="form-label">Status</label>
                    <select name="detectionStatus" className="form-select" value={form.detectionStatus || ''} onChange={handleChange} required>
                        <option value="">Select Status</option>
                        {statuses.map(s => <option key={s} value={s}>{s}</option>)}
                    </select>
                </div>
                <div className="mb-3">
                    <label className="form-label">Crop Associations (comma separated)</label>
                    <input name="cropAssociations" className="form-control" value={cropInput} onChange={handleCropChange} />
                </div>
                <div className="mb-3">
                    <label className="form-label">Region Associations (comma separated)</label>
                    <input name="regionAssociations" className="form-control" value={regionInput} onChange={handleRegionChange} />
                </div>
                <div className="mb-3">
                    <label className="form-label">Seasonal Associations (comma separated)</label>
                    <input name="seasonalAssociations" className="form-control" value={seasonalInput} onChange={handleSeasonalChange} />
                </div>
                <div className="mb-3">
                    <label className="form-label">Notes</label>
                    <textarea name="detectionNotes" className="form-control" value={form.detectionNotes || ''} onChange={handleChange} />
                </div>
                <button className="btn btn-primary" type="submit" disabled={loading}>{id ? 'Update' : 'Register'}</button>
                <button className="btn btn-secondary ms-2" type="button" onClick={() => navigate('/')}>Cancel</button>
            </form>
        </div>
    );
};

export default ParticulateForm;
