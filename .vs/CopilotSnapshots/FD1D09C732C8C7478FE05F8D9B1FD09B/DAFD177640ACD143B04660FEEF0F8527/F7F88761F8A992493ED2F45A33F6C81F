using ParticulateRegister.Data.Models;
using ParticulateRegister.Data.Repositories;

namespace ParticulateRegister.Domain.Services
{
    public class ParticulateService : IParticulateService
    {
        private readonly IParticulateRepository _repository;

        public ParticulateService(IParticulateRepository repository)
        {
            _repository = repository;
        }

        public Task<IEnumerable<Particulate>> GetAllAsync() => _repository.GetAllAsync();
        public Task<Particulate?> GetByIdAsync(Guid id) => _repository.GetByIdAsync(id);
        public Task AddAsync(Particulate particulate) => _repository.AddAsync(particulate);
        public Task UpdateAsync(Particulate particulate) => _repository.UpdateAsync(particulate);
        public Task DeleteAsync(Guid id) => _repository.DeleteAsync(id);
        public Task SaveChangesAsync() => _repository.SaveChangesAsync();
    }
}
